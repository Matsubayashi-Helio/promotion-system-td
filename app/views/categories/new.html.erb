<% if @category.errors.any? %>
    <div class="alert">
        <p>Não foi possível criar a categoria</p>
        <p>Confira os erros abaixo:</p>
        <ul>
            <% @category.errors.full_messages.each do |m|%>
                <li><%= m %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with model: @category do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :code %>
    <%= f.text_field :code %>

    <%= f.submit 'Criar categoria' %>

<% end %>